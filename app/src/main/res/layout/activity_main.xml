<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="16dp"
        android:text="Sets"
        app:layout_constraintStart_toEndOf="@+id/score"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textScore1"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:ems="1"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/score"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/score"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <TextView
        android:id="@+id/textSet1"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:ems="3"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/set"
        app:layout_constraintStart_toStartOf="@+id/set"
        app:layout_constraintTop_toBottomOf="@+id/set" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="44dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="3" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="5" />
    </RadioGroup>

    <TextView
        android:id="@+id/textScore2"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:ems="1"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/textScore1"
        app:layout_constraintStart_toStartOf="@+id/textScore1"
        app:layout_constraintTop_toBottomOf="@+id/textScore1" />

    <TextView
        android:id="@+id/textSet2"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:ems="3"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/textSet1"
        app:layout_constraintStart_toStartOf="@+id/textSet1"
        app:layout_constraintTop_toBottomOf="@+id/textSet1" />

    <TextView
        android:id="@+id/Games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="Games"
        app:layout_constraintEnd_toEndOf="@+id/score"
        app:layout_constraintStart_toStartOf="@+id/score"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <TextView
        android:id="@+id/Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Points"
        app:layout_constraintBottom_toBottomOf="@+id/Games"
        app:layout_constraintStart_toEndOf="@+id/Games"
        app:layout_constraintTop_toTopOf="@+id/Games" />

    <TextView
        android:id="@+id/textGame"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:ems="1"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/Games"
        app:layout_constraintStart_toStartOf="@+id/Games"
        app:layout_constraintTop_toBottomOf="@+id/Games" />

    <TextView
        android:id="@+id/textPoint1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:ems="2"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/Points"
        app:layout_constraintStart_toStartOf="@+id/Points"
        app:layout_constraintTop_toBottomOf="@+id/Points" />

    <TextView
        android:id="@+id/textPoint2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:ems="2"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/textPoint1"
        app:layout_constraintStart_toStartOf="@+id/textPoint1"
        app:layout_constraintTop_toBottomOf="@+id/textPoint1" />

    <TextView
        android:id="@+id/textGame2"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:ems="1"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/textGame"
        app:layout_constraintStart_toStartOf="@+id/textGame"
        app:layout_constraintTop_toBottomOf="@+id/textGame" />

    <Button
        android:id="@+id/ButtonPointA"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/green2"
        android:text="Point A"
        app:layout_constraintBottom_toBottomOf="@+id/textPoint1"
        app:layout_constraintStart_toEndOf="@+id/textPoint1"
        app:layout_constraintTop_toBottomOf="@+id/Points" />

    <Button
        android:id="@+id/ButtonPointB"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/green2"
        android:text="Point B"
        app:layout_constraintBottom_toBottomOf="@+id/textPoint2"
        app:layout_constraintStart_toEndOf="@+id/textPoint2"
        app:layout_constraintTop_toTopOf="@+id/textPoint2" />

    <Button
        android:id="@+id/ButtonReset"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/green2"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toTopOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>